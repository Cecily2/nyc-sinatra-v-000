<form action="/figures" method="post">

  <label>Figure Name</label><br>
  <input type="text" id="figure_name" name="figure[name]"> <br><br>

  <label>Titles</label><br>
  <% Title.all.each do |t| %>
    <input id="title_<%= t.id %>" type="checkbox" name="figure[title_ids][]" value="<%= t.id %>"> 
    <%= t.name %><br>
  <% end %>
  <br>
  Or, New Title: <input id="new_title" type="text" name="title[name]"> <br><br>

  <label>Landmarks</label><br>
  <% Landmark.all.each do |l| %>
    <input id="landmark_<%= l.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= l.id %>"> 
    <%= l.name %><br>
  <% end %>
  <br>
  Or, New Landmark: <input id="new_landmark" type="text" name="landmark[name]"> <br><br>
  
  <input type="submit" name="Create New Figure" value="Create New Figure">

</form>